@model VacationManager.Data.TimeOff.BaseTimeOff

@{ ViewData["Title"] = "Edit"; }

<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Edit PTO!</h1>
                        </div>
                        @using (Html.BeginForm("EditPaid","PaidTimeOff", FormMethod.Post, new { @class = "user" }))
                        {
            <div class="form-group">
                @Html.LabelFor(model => model.From)
                @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "date" } })
            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.To)
                                @Html.EditorFor(model => model.To, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "date" } })
                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.IsHalfDay)
                                                @Html.EditorFor(model => model.IsHalfDay, new { htmlAttributes = new { @class = "form-control form-control-user" } })
                                            </div>
                                                            <input type="submit" value="Save" class="btn btn-primary btn-user btn-block" />}
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>