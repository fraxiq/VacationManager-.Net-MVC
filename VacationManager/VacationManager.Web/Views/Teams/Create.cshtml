@model VacationManager.Web.Models.CreateTeamViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamLeadId" class="control-label"></label>
                <select asp-for="TeamLeadId" asp-items="Model.TeamLeads">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Developers" class="control-label"></label>
                <select multiple="multiple" class="multi-select" id="my_multi_select1" asp-for="@Model.Developers" asp-items="@ViewBag.Developers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
